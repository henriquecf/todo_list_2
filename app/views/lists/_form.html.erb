<%= simple_form_for @list, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@list[:name]) %>
  <%= f.input :is_private %>
  <%= error_span(@list[:is_private]) %>

  <%= f.simple_fields_for :tasks do |builder| %>
    <%= builder.input :task_name %>
  <% end %>

  <%= f.button :submit, :class => 'btn-primary' %>
<% end %>
