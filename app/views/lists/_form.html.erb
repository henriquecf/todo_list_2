<%= simple_form_for @list, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@list[:name]) %>
  <%= f.input :is_private %>
  <%= error_span(@list[:is_private]) %>

  <h3>Tasks</h3>
  <div id="tasks">
  <%= f.simple_fields_for :tasks do |task| %>
    <%= render 'task_fields', f: task %>
  <% end %>
  </div>
    <div class="links">
      <%= link_to_add_association 'Add new task', f, :tasks %>
    </div>

  <%= f.submit %>
<% end %>
